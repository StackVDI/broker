%h1 Users
%p You can manage users in this page

%table.table.table-bordered.table-hover
  %thead
    %th
      Name
    %th 
      Email
    %th 
      Actions
  %tbody
    - @users.each do |user| 
      - @class = nil
      - if !user.confirmed?
        - @class = "warning"
      - elsif !user.approved?
        - @class = "info"
      %tr{ :class => @class}
        %td
          =user.name
        %td
          =user.email
        %td
          - if user.confirmed?
            %button.btn.btn-mini.btn-success Confirmed
          - else
            %button.btn.btn-mini.btn-danger Not confirmed
          - if user.approved?
            %button.btn.btn-mini.btn-success 
              =link_to 'Approved', administration_toggle_approved_user_path(:id => user.id), :method => :put, :class => 'btn-success'
          - else
            %button.btn.btn-mini.btn-danger 
              =link_to 'Not approved', administration_toggle_approved_user_path(:id => user.id), :method => :put, :class => 'btn-danger'
          %button.btn.btn-mini.btn-danger
            =link_to 'Delete', administration_delete_user_path(id: user.id), 
              class: 'btn-danger', method: :delete, data: { confirm: 'Are you sure?' }, 
              id: "delete_#{user.id}"


      
